model FoodiePassport {
  id               String    @id @default(cuid())
  createdAt        DateTime  @default(now())
  type             PromoType @default(FOODIE_PASSPORT)
  min_spend_amount Decimal
  capped_amount    Decimal
  amount           Decimal?
  status           Boolean   @default(true)
  student          Student   @relation(fields: [studentId], references: [id])
  studentId        String
}

model Promo {
  id               String    @id @default(cuid())
  createdAt        DateTime  @default(now())
  type             PromoType
  name             String?
  discount         Decimal
  min_spend_amount Decimal
  capped_amount    Decimal
  amount           Decimal?
  status           Boolean   @default(true)
  cafe             Cafe      @relation(fields: [cafeId], references: [id])
  cafeId           String
}

model Location {
  id       String @id @default(cuid())
  location String
  Cafe     Cafe[]
}

model Rating {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  rating    Decimal
  review    String?
  cafe      Cafe     @relation(fields: [cafeId], references: [id])
  cafeId    String
  order     Order    @relation(fields: [orderId], references: [id])
  orderId   String
  student   Student  @relation(fields: [studentId], references: [id])
  studentId String
}

enum PromoType {
  DELIVERY_VOUCHER
  DISCOUNT_VOUCHER
  FOODIE_PASSPORT
}

enum CafeCategory {
  FOOD
  BEVERAGE
  BOTH
}

enum ProductCategory {
  NOODLE
  FASTFOOD
  SOUP
  DESSERT
  RICE
  WESTERN
  BEVERAGE
}

enum DeliveryMode {
  CAR
  MOTORCYCLE
  BYFOOT
}

enum Status {
  DRAFT
  PREPARING
  PICKUP
  DELIVERING
  COMPLETED
}

enum PaymentType {
  CASH
  ONLINE
}

enum DeliveryOption {
  DELIVERY
  PICKUP
}

enum UserType {
  STUDENT
  CAFE
  RIDER
}
